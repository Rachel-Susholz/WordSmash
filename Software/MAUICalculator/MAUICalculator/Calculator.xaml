<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUICalculator.Calculator"
    Title="Calculator"
    BackgroundColor="White">

    <Grid
    Padding="12"
    RowSpacing="8"
    ColumnSpacing="8"
    RowDefinitions="Auto,*,*,*,*,*"
    ColumnDefinitions="*,*,*,*">
        
        <Label
      Grid.Row="0"
      Grid.ColumnSpan="4"
      Text="0"
      FontSize="36"
      HorizontalTextAlignment="End"
      VerticalOptions="Center" />

        <Button
      Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
      Text="C"
      FontSize="24"
      BackgroundColor="LightGray"
      Style="{StaticResource Key=clear-button}"/>
        <Button
      Grid.Row="1" Grid.Column="3"
      Text="÷"
      FontSize="24"
      BackgroundColor="LightGray" 
      Style="{StaticResource Key=operator-button}"/>

        <Button Grid.Row="2" Grid.Column="0" Text="7" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="2" Grid.Column="1" Text="8" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="2" Grid.Column="2" Text="9" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="2" Grid.Column="3" Text="×" FontSize="24" BackgroundColor="Salmon" Style="{StaticResource Key=operator-button}"/>

        <Button Grid.Row="3" Grid.Column="0" Text="4" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="3" Grid.Column="1" Text="5" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="3" Grid.Column="2" Text="6" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="3" Grid.Column="3" Text="−" FontSize="24" BackgroundColor="Salmon" Style="{StaticResource Key=operator-button}"/>

        <Button Grid.Row="4" Grid.Column="0" Text="1" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="4" Grid.Column="1" Text="2" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="4" Grid.Column="2" Text="3" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="4" Grid.Column="3" Text="+" FontSize="24" BackgroundColor="Salmon" Style="{StaticResource Key=operator-button}"/>

        <Button Grid.Row="5" Grid.Column="0" Text="±" FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="5" Grid.Column="1" Text="0"  FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="5" Grid.Column="2" Text="."  FontSize="24" BackgroundColor="LightBlue" Style="{StaticResource Key=numeric-button}"/>
        <Button Grid.Row="5" Grid.Column="3" Text="="  FontSize="24" BackgroundColor="Salmon" Style="{StaticResource Key=equals-button}"/>

    </Grid>
</ContentPage>